<% include header.ejs %>
<style>
    .input-group{
        margin: 20px 0;
        width: 100%;
    }
    .input-group-addon{
        width: 100px;
    }
</style>
<body>
<nav class="navbar navbar-inverse">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">许愿墙</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li class="active"><a href="/"> 首页 <span class="sr-only">(current)</span></a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <% if( loged !='1' ){ %>
                <li><a href="/login">登录</a></li>
                <li><a href="/sign">注册</a></li>
                <% }else{ %>
                <li><a href="javascript:;"><%=username %></a></li>
                <li class="dropdown">
                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">个人信息 <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="/user/setting?username=<%=username %>">个人信息设置</a></li>
                        <li><a href="/">联系管理员</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="javascript:;" id="logout">登出</a></li>
                    </ul>
                </li>
                <% } %>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container">
    <div class="row">
        <% if( loged =='1'){ %>
            <h2>个人设置</h2>
            <div class="col-md-12">
                <div>
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">基本信息</a></li>
                        <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">修改密码</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="home">
                            <form id="userDetailsForm">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1">用户名</span>
                                    <input type="text" class="form-control" name="username" value="<%=username%>" disabled>
                                </div>
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1">昵称</span>
                                    <input type="text" class="form-control" name="nick" <%=nick %> placeholder="昵称">
                                </div>
                                <% for(var i=0;i<items.length;i++){%>
                                    <div class="input-group">
                                        <span class="input-group-addon" id="basic-addon1"><%=items[i].name%></span>
                                        <input type="text" class="form-control" name="hobby" value="<%=items[i].content%>">
                                    </div>
                                <%}%>
                                <button id="submitUserBtn" class="btn btn-success" type="button">保存信息</button>
                                <button id="submitUserBtn" class="btn btn-default" type="reset">重置填写</button>
                            </form>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="settings">
                            <form id="userSteeingsForm">

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>
</body>
<% include footer.ejs %>